# Development Environment Configuration
# Copy to .env.dev.local and customize for your environment

# Application Settings
VEEVA_ENV=development
VEEVA_LOG_LEVEL=DEBUG
VEEVA_DB_ECHO=true

# Database Configuration
VEEVA_DB_PATH=data/database/veeva_opendata.db
VEEVA_DB_POOL_SIZE=3
VEEVA_DB_MAX_OVERFLOW=5
VEEVA_DB_POOL_TIMEOUT=30

# Performance Settings
VEEVA_PARALLEL_QUERIES=false
VEEVA_MAX_WORKERS=1
VEEVA_QUERY_TIMEOUT=60

# Monitoring and Alerting
VEEVA_METRICS_ENABLED=false
VEEVA_HEALTH_CHECK_INTERVAL=120
VEEVA_ALERT_THRESHOLD_CPU=95
VEEVA_ALERT_THRESHOLD_MEMORY=95
VEEVA_ALERT_THRESHOLD_DISK=98

# Backup Settings
VEEVA_BACKUP_ENABLED=false
VEEVA_BACKUP_INTERVAL=24h
VEEVA_BACKUP_RETENTION_DAYS=3
VEEVA_BACKUP_PATH=backups

# Security Settings
VEEVA_SECURE_LOGS=false
VEEVA_MASK_SENSITIVE_DATA=false

# Container Settings
TZ=UTC
LOG_LEVEL=DEBUG
GRAFANA_PASSWORD=dev_password

# Resource Limits
MEMORY_LIMIT=512m
CPU_LIMIT=0.25